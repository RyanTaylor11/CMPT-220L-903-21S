package com.company;

public class Main {
    boolean needsWatering;
    char plantFamily;
    // Date of Birth
    String Name;

    // Everytime we make a mammal this is going to run.
    public Main(String Name, boolean needsWatering, char plantFamily) {
        System.out.println("Plant class ran.");
        this.Name = Name;
        this.needsWatering = true;
        this.plantFamily = plantFamily;
    }

    public void getInfo() {
        System.out.println(this.Name);
        System.out.println(this.needsWatering);
        System.out.println(this.plantFamily);
    }

    public void speak() {
        System.out.println("Hello, I am a plant");
    }
}
